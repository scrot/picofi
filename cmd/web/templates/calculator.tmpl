{{define "title"}}Calculator{{end}}

{{define "main"}}
<h1>Hey, I'm a calculator</h1>
<section class="variables">
  <form method="POST">
    <label>Yearly Income</label>
    <input type="text" name="income" value={{.AnnualIncome}} />
    <label>Yearly Expenses</label>
    <input type="text" name="expenses" value={{.AnnualExpenses}} />
    <button class="submit" type="submit">Calculate</button>
  </form>
</section>
<section class="results">
  <p>Absolute Saved Annually: {{annualSaveRate .AnnualIncome .AnnualExpenses}}</p>
  <p>Percentage Saved Annually: {{annualSaveRatePercentage .AnnualIncome .AnnualExpenses}}</p>
</section>
{{end}}
